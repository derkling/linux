/*
 * ARM Ltd. Versatile Express
 *
 * CoreTile Express AArch64 (model)
 *
 */

/dts-v1/;

/memreserve/ 0x80000000 0x00010000;

/ {
	model = "Juno";
	compatible = "arm,juno", "arm,vexpress";
	interrupt-parent = <&gic>;
	#address-cells = <2>;
	#size-cells = <2>;

	chosen { };

	aliases {
		serial0 = &v2m_serial0;
		serial1 = &v2m_serial1;
		serial2 = &v2m_serial2;
		serial3 = &v2m_serial3;
	};

	cpus {
		#address-cells = <1>;
		#size-cells = <0>;

		cpu@0 {
			device_type = "cpu";
			compatible = "arm,armv8";
			reg = <0x100>;
			enable-method = "psci";
		};
		cpu@1 {
			device_type = "cpu";
			compatible = "arm,armv8";
			reg = <0x101>;
			enable-method = "psci";
		};
		cpu@2 {
			device_type = "cpu";
			compatible = "arm,armv8";
			reg = <0>;
			enable-method = "psci";
		};
		cpu@3 {
			device_type = "cpu";
			compatible = "arm,armv8";
			reg = <1>;
			enable-method = "psci";
		};
	};

	memory@80000000 {
		device_type = "memory";
		reg = < 0x00000000 0x80000000 0x0 0x80000000
		        0x00000008 0x80000000 0x0 0x80000000 >;
	};

	gic: interrupt-controller@2c001000 {
		compatible = "arm,cortex-a9-gic";
		#interrupt-cells = <3>;
		#address-cells = <0>;
		interrupt-controller;
		reg = <0x0 0x2c001000 0x0 0x1000>,
		      <0x0 0x2c002000 0x0 0x100>;
	};

	timer {
		compatible = "arm,armv8-timer";
		interrupts = <1 14 0xff01>;
		clock-frequency = <100000000>;
	};

	pmu {
		compatible = "arm,armv8-pmuv3";
		interrupts = <0 60 4>,
			     <0 61 4>,
			     <0 62 4>,
			     <0 63 4>;
	};

	psci {
		compatible 	= "arm,psci";
		method 		= "smc";
		cpu_suspend 	= <0x80100001>;
		cpu_off 	= <0x80100002>;
		cpu_on 		= <0x80100003>;
		migrate 	= <0x80100004>;
	};

	smb {
		compatible = "simple-bus";

		#address-cells = <2>;
		#size-cells = <1>;

		ranges = <0 0 0x0 0x08000000 0x04000000>,
			 <1 0 0x0 0x14000000 0x04000000>,
			 <2 0 0x0 0x18000000 0x04000000>,
			 <3 0 0x0 0x1c000000 0x04000000>,
			 <4 0 0x0 0x0c000000 0x04000000>,
			 <5 0 0x0 0x10000000 0x04000000>;

		#interrupt-cells = <1>;
		interrupt-map-mask = <0 0 95>;
		interrupt-map = <0 0  0 &gic 0  0 4>,
				<0 0  1 &gic 0  1 4>,
				<0 0  2 &gic 0  2 4>,
				<0 0  3 &gic 0  3 4>,
				<0 0  4 &gic 0  4 4>,
				<0 0  5 &gic 0  5 4>,
				<0 0  6 &gic 0  6 4>,
				<0 0  7 &gic 0  7 4>,
				<0 0  8 &gic 0  8 4>,
				<0 0  9 &gic 0  9 4>,
				<0 0 10 &gic 0 10 4>,
				<0 0 11 &gic 0 11 4>,
				<0 0 12 &gic 0 12 4>,
				<0 0 13 &gic 0 13 4>,
				<0 0 14 &gic 0 14 4>,
				<0 0 15 &gic 0 15 4>,
				<0 0 16 &gic 0 16 4>,
				<0 0 17 &gic 0 17 4>,
				<0 0 18 &gic 0 18 4>,
				<0 0 19 &gic 0 19 4>,
				<0 0 20 &gic 0 20 4>,
				<0 0 21 &gic 0 21 4>,
				<0 0 22 &gic 0 22 4>,
				<0 0 23 &gic 0 23 4>,
				<0 0 24 &gic 0 24 4>,
				<0 0 25 &gic 0 25 4>,
				<0 0 26 &gic 0 26 4>,
				<0 0 27 &gic 0 27 4>,
				<0 0 28 &gic 0 28 4>,
				<0 0 29 &gic 0 29 4>,
				<0 0 30 &gic 0 30 4>,
				<0 0 31 &gic 0 31 4>,
				<0 0 32 &gic 0 32 4>,
				<0 0 33 &gic 0 33 4>,
				<0 0 34 &gic 0 34 4>,
				<0 0 35 &gic 0 35 4>,
				<0 0 36 &gic 0 36 4>,
				<0 0 37 &gic 0 37 4>,
				<0 0 38 &gic 0 38 4>,
				<0 0 39 &gic 0 39 4>,
				<0 0 40 &gic 0 40 4>,
				<0 0 41 &gic 0 41 4>,
				<0 0 42 &gic 0 42 4>,
				<0 0 43 &gic 0 43 4>,
				<0 0 44 &gic 0 44 4>,
				<0 0 45 &gic 0 45 4>,
				<0 0 46 &gic 0 46 4>,
				<0 0 47 &gic 0 47 4>,
				<0 0 48 &gic 0 48 4>,
				<0 0 49 &gic 0 49 4>,
				<0 0 50 &gic 0 50 4>,
				<0 0 51 &gic 0 51 4>,
				<0 0 52 &gic 0 52 4>,
				<0 0 53 &gic 0 53 4>,
				<0 0 54 &gic 0 54 4>,
				<0 0 55 &gic 0 55 4>,
				<0 0 56 &gic 0 56 4>,
				<0 0 57 &gic 0 57 4>,
				<0 0 58 &gic 0 58 4>,
				<0 0 59 &gic 0 59 4>,
				<0 0 60 &gic 0 60 4>,
				<0 0 61 &gic 0 61 4>,
				<0 0 62 &gic 0 62 4>,
				<0 0 63 &gic 0 63 4>,
				<0 0 64 &gic 0 64 4>,
				<0 0 65 &gic 0 65 4>,
				<0 0 66 &gic 0 66 4>,
				<0 0 67 &gic 0 67 4>,
				<0 0 68 &gic 0 68 4>,
				<0 0 69 &gic 0 69 4>,
				<0 0 70 &gic 0 70 4>;

		/include/ "vexpress-v2m-juno.dtsi"
	};
};
